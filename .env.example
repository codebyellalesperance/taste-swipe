OPENAI_API_KEY=your_openai_api_key_here
# Or if using Anthropic:
# ANTHROPIC_API_KEY=your_api_key_here

# Flask Configuration
FLASK_ENV=development  # Set to 'production' for production deployment
SECRET_KEY=your-secret-key-here-generate-with-python-secrets
PORT=5001

# Frontend URL (for OAuth redirects)
FRONTEND_URL=http://localhost:8000  # Change to production URL

# CORS Origins (comma-separated, no wildcards in production)
ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Spotify API Credentials
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIFY_REDIRECT_URI=http://localhost:5001/auth/callback

# LLM Configuration
LLM_PROVIDER=openai
# For OpenAI: gpt-4o-mini, gpt-4o, gpt-3.5-turbo
# For Anthropic: claude-3-haiku-20240307, claude-3-sonnet-20240229
LLM_MODEL=gpt-4o-mini
LLM_TIMEOUT=30

# Production Security (uncomment for production)
# SESSION_COOKIE_SECURE=true
# SESSION_COOKIE_HTTPONLY=true
# SESSION_COOKIE_SAMESITE=Lax

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100  # Adjust based on expected traffic

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
